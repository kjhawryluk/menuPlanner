<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/purchasedCheckBox"
        android:layout_width="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/hint"
        />

    <TextView
        android:id="@+id/shoppingListIngredientQuantityTextView"
        android:layout_width="50dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:textSize="@dimen/listFontSize"
        android:textColor="@color/colorAccentSecondary"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/shoppingListIngredientNameTextView"
        android:textSize="@dimen/listFontSize"
        android:textColor="@color/colorTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        />

</LinearLayout>

    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000"/>
    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#333"/>
</LinearLayout>